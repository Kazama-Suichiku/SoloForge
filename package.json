{
  "name": "soloforge",
  "version": "1.0.0",
  "description": "Electron desktop application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build:renderer && cross-env NODE_ENV=production ELECTRON_IS_DEV=0 electron .",
    "dev": "concurrently -k \"npm run dev:renderer\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "dev:renderer": "vite",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:win": "npm run build:renderer && electron-builder --win"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.95.3",
    "dotenv": "^16.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^11.0.2",
    "idb": "^8.0.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.0",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.soloforge.app",
    "productName": "SoloForge",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "src/main/**/*",
      "src/preload/**/*",
      "src/shared/**/*",
      "dist-renderer/**/*"
    ],
    "extraMetadata": {
      "main": "src/main/main.js"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico"
    }
  }
}
